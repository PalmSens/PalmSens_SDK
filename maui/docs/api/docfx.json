{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../../PSLibraries",
          "files": [
            "PalmSens.Core.Simplified/*.csproj",
            // "PalmSens.Core.Simplified.MAUI/*.csproj",
            "SDKPlot/*NET.csproj",
            // "SDKPlot.Maui/*.csproj",
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          "favicon.ico",
        ]
      }
    ],
    "output": "_site",
    "template": ["default", "modern", "template"],
    "globalMetadata": {
      "_appName": "",
      "_appTitle": "PalmSens.NET",
      "_appLogoPath": "images/banner.svg",
      "_appFaviconPath": "favicon.ico",
      "_enableSearch": true,
      "_lang": "en",
      "pdf": false
    }
  }
}
